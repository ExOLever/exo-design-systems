{
  "name": "exo-design-system",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "npm run lint && npm run build-lib && build-storybook",
    "build-lib-watch": "tsc -w",
    "build-lib": "tsc && npm run copy-css-to-lib && npm run copy-svg-to-lib && npm run copy-png-to-lib && npm run copy-woff2-to-lib",
    "test:coverage": "npm test -- --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "copy-css-to-lib": "cpx \"./src/**/*.css\" ./build/lib",
    "copy-woff2-to-lib": "cpx \"./src/**/*.woff2\" ./build/lib",
    "copy-svg-to-lib": "cpx \"./src/**/*.svg\" ./build/lib",
    "copy-png-to-lib": "cpx \"./src/**/*.png\" ./build/lib",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@material/mwc-icon": "^0.2.1",
    "@material/mwc-ripple": "^0.2.1",
    "@webcomponents/custom-elements": "^1.2.1",
    "custom-elements-es5-adapter": "^1.0.0",
    "material-components-web-components": "git+ssh://git@github.com/exolever/material-components-web-components.git"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-knobs": "^4.0.0-alpha.23",
    "@storybook/addon-options": "^4.0.0-alpha.23",
    "@storybook/html": "^4.0.0-alpha.23",
    "@types/node": "^10.11.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "color": "^3.0.0",
    "lit-element": "^0.5.0",
    "moment": "^2.22.2",
    "react-datetime": "^2.15.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.1.1"
  }
}
